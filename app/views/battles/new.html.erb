<% provide(:title, 'Adding New Article') %>
<h1>Adding New Article</h1>

<div class="">
  <div class="">
    <%= form_for(@battle) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :belligerent %>
      <%= f.text_field :belligerent %>

      <%= f.label :strength %>
      <%= f.text_field :strength %>
      
      <%= f.label :casualties %>
      <%= f.text_field :casualties %>
      
      <%= f.label :result %>
      <%= f.text_field :result %>

      <%= f.submit "Create New Article" %>
    <% end %>
  </div>
</div>
